## （六）代码
SELECT  
(REF(CLOSE,前一日)<REF(OPEN,前一日)
AND REF(VOL,前一日)/REF(VOL,(前一日+1))>量能倍数  
AND REF(CLOSE,前一日)>REF(LOW,(前一日+1))
AND (REF(CLOSE,(前一日+1))/REF(CLOSE,(前一日+2))>1.09 OR REF(LOW,前一日)>REF(HIGH,(前一日+1))))
	OR 
(REF(CLOSE,(前一日+1))<REF(OPEN,(前一日+1))
AND REF(VOL,(前一日+1))/REF(VOL,(前一日+2))>量能倍数 
AND REF(CLOSE,(前一日+1))>REF(LOW,(前一日+2))
AND (REF(CLOSE,(前一日+2))/REF(CLOSE,(前一日+3))>1.09 OR REF(LOW,(前一日+1))>REF(HIGH,(前一日+2)))
AND REF(CLOSE,前一日)>REF(LOW,(前一日+1)))
AND STRFIND(CODE,"300",1)=0
AND BARSCOUNT(C)>100
AND STRFIND(ZQMC,"ST",1)=0
AND STRFIND(ZQMC,"*",1)=0;


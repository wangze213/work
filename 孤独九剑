## （六）代码
SELECT 
(REF(CLOSE,前一日)>REF(OPEN,前一日)
AND REF(VOL,前一日)/REF(VOL,(前一日+1))>=2
	AND (REF(CLOSE,前一日)/REF(CLOSE,(前一日+1))>=常态昨日涨幅		
	OR (REF(HIGH,前一日)/REF(LOW,前一日)>=变异昨日振幅 
	AND REF(CLOSE,前一日)/REF(CLOSE,(前一日+1))>=变异昨日涨幅))

		AND REF(VOL,前一日)*REF(CLOSE,前一日)>100000000
				AND REF(CLOSE,(前一日-1))>REF(HIGH,前一日))
	OR
(REF(CLOSE,(前一日+1))>REF(OPEN,(前一日+1))
AND REF(VOL,(前一日+1))/REF(VOL,(前一日+2))>=2
	AND (REF(CLOSE,(前一日+1))/REF(CLOSE,(前一日+2))>=常态昨日涨幅		
	OR (REF(HIGH,(前一日+1))/REF(LOW,(前一日+1))>=变异昨日振幅 
	AND REF(CLOSE,(前一日+1))/REF(CLOSE,(前一日+2))>=变异昨日涨幅))
		AND REF(VOL,(前一日+1))*REF(CLOSE,(前一日+1))>100000000
		AND REF(OPEN,前一日)>REF(LOW,(前一日+1))
				AND REF(CLOSE,(前一日-1))>REF(HIGH,(前一日+1)))
AND STRFIND(ZQMC,"ST",1)=0
AND BARSCOUNT(C)>100
AND STRFIND(CODE,"300",1)=0;


